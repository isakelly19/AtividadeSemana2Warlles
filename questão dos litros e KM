#include <stdio.h>

int main() {
    float litros, km;
    float total_km = 0, total_litros = 0;
    
    printf("Entre com os litros consumidos : ");
    scanf("%f", &litros);
    
    while (litros != -1) {
        printf("Entre com os km percorridos: ");
        scanf("%f", &km);

        float km_por_litro = km / litros;
        printf("A taxa km/litro para esse tanque foi: %.6f\n\n", km_por_litro);

        total_km += km;
        total_litros += litros;

        printf("Entre com os litros consumidos (-1 para finalizar): ");
        scanf("%f", &litros);
    }

    if (total_litros != 0) {
        float media = total_km / total_litros;
        printf("A taxa total de km/litro foi: %f\n", media);
    } else {
        printf("Nenhum dado foi inserido.\n");
    }

    return 0;
}
